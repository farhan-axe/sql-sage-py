
{
  "name": "sql-sage",
  "version": "1.0.0",
  "description": "SQL Sage - AI-powered SQL query generator",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "build": "vite build",
    "package": "electron-builder"
  },
  "author": "SQL Sage Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.sqlsage.app",
    "productName": "SQL Sage",
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "public",
      "output": "electron-dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
